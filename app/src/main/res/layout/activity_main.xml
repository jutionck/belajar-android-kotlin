<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/this_is_main_activity"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_1st_player"
            android:autofillHints=""
            android:inputType="text" />

        <EditText
            android:id="@+id/input_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_2nd_player"
            android:autofillHints=""
            android:inputType="text" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_tekan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E0327"
            android:backgroundTint="#FFFFFF"
            android:text="@string/lets_play"
            app:cornerRadius="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_pencet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E0327"
            android:backgroundTint="#FFFFFF"
            android:text="@string/pencet"
            app:cornerRadius="5dp" />

        <TextView
            android:id="@+id/viewPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/versus"
            android:textAlignment="center"
            android:textSize="20sp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>