<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/foodFragment">

    <action
        android:id="@+id/action_to_fragment_food"
        app:destination="@+id/foodFragment"/>

    <action
        android:id="@+id/action_to_fragment_create_food"
        app:destination="@+id/createFoodFragment"/>

    <fragment
        android:id="@+id/foodFragment"
        android:name="com.example.first_android.FoodFragment"
        android:label="fragment_food"
        tools:layout="@layout/fragment_food" />
    <fragment
        android:id="@+id/createFoodFragment"
        android:name="com.example.first_android.CreateFoodFragment"
        android:label="fragment_create_food"
        tools:layout="@layout/fragment_create_food" >
        <action
            android:id="@+id/action_createFoodFragment_pop"
            app:popUpTo="@id/createFoodFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>